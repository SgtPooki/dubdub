  ***********************************/

  $('.showhide h3').prepend('<a class="open-close">+ </a>');
  var pwidth = $('.two-columns .v_column').width();
  $('.showhide p').width( pwidth);
  $('.showhide h3').click(function() {
    $('.showhide .open .open-close').html('+ ');
    if($('.showhide h3').hasClass('open') == true && $(this).hasClass('open') != true){
      $('.showhide .open').next().slideUp(600);
      $('.showhide .open').removeClass('open');
    };
    $(this).toggleClass('open');
    $('.showhide .open .open-close').html('- ');
    $(this).next().slideToggle(600);
  });


  $('.menu-mlid-1265 > a').click(function(e){
